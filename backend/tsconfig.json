// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "src",
    "tsconfig.json",
    "jest.config.js"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}