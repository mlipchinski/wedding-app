// app/backend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared/*"
      ],
      "@shared-types/*": [
        "../shared/types/*"
      ]
    }
  },
  "include": [
    "src",
    "../shared/types"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "../frontend"
  ]
}