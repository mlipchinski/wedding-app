{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Backend",
            "program": "${workspaceFolder}/backend/dist/server.js",
            "cwd": "${workspaceFolder}/backend",
            //"preLaunchTask": "tsc: build - server",
            "outFiles": [
                "${workspaceFolder}/backend/dist/**/*.js"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Frontend",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend/src",
            "preLaunchTask": "npm: dev"
        }
    ],
    "compounds": [
        {
            "name": "Full stack",
            "configurations": [
                "Backend",
                "Frontend"
            ],
        }
    ]
}